<UserControl x:Class="cms_wpf_app.Views.OrderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cms_wpf_app.Views"
             mc:Ignorable="d" 
             xmlns:viewmodels="clr-namespace:cms_wpf_app.ViewModels"
             d:DataContext="{d:DesignInstance viewmodels:OrderDetailsViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="{Binding PageTitle}" HorizontalAlignment="Center" FontSize="22" FontWeight="Medium" Margin="0 10 0 0"/>

            <TextBlock Text="Messge" FontWeight="DemiBold" />
            <TextBlock Text="{Binding OrderMessage}" Padding="7"/>

            <TextBlock Text="Status" FontWeight="DemiBold" />
            <TextBlock Text="{Binding OrderStatus}" Padding="7"/>

            <StackPanel Orientation="Vertical" Margin="0 5 0 0">
                <Button x:Name="CancelBtn" Click="CancelBtn_Click" Padding="4" Content="Back to Orders"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <StackPanel Orientation="Vertical" Margin="0 5 0 0">
                <TextBlock Text="Enter Username or leave empty" FontWeight="DemiBold" />
                <TextBox Text="{Binding UserName}" Padding="7"/>
                
                <TextBlock Text="Enter comment" FontWeight="DemiBold" />
                <TextBox Text="{Binding OrderComment}" Padding="7"/>
                <Button Command="{Binding CreateCommentCommand}" Padding="4" Content="Post Comment"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
